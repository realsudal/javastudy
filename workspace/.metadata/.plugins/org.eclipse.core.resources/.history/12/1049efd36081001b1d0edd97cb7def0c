package ex02_String;

import java.util.Scanner;

public class Quiz {

	public static void main(String[] args) {
		//1.시간을 입력받아서 출력하기
		
		Scanner sc=new Scanner(System.in);
		System.out.println("시간 :");
		int h=sc.nextInt();
		
		System.out.println("분 :");
		int m=sc.nextInt();
		
		System.out.println("초 :");
		int s=sc.nextInt();
		
		//int를 String으로 변환
		String sH=h+"";
		String sM=m+"";
		String sS=s+"";
		
		if(m<10) {
			sM="0"+sM;
		}
		if(s<10) {
			sS="0"+sS;
		}
		
		
		
		System.out.println(sH+"시"+ sM+"분"+sS+"초");
		
	}

}
