		if(this.bullet+bullet<FULL_BULLET) {
			this.bullet+=bullet;
			System.out.println(model+"("+bullet+"추가됨 )");
		}else {
			
		}
		
	}
	
	public void info() {
		System.out.println(model+"("+bullet+"발 남아있음)");
	}
	
	
}
