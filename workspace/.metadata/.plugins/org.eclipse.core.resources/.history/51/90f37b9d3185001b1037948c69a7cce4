package quiz07;

public class Game {

	//private Player[] players=new Player[playerCount];
	private Player[] players;
	
	public Game(int playerCount) {
		//배열의 선언과 생성을 분리
		players=new Player[playerCount];
		
	}
	
	//램덤으로 플레이어 생성
	public void setPlayers(){
		String[] names= {"mimi","me","nana","jh","enu"};
		for(int i=0;i<players.length;i++) {
			//Player의 생성자가 없을때 -> players[i].setName(name);
			
			//생성자가 있을때
			players[i]=new Player(names[(int)(Math.random()*names.length)]);
		}
	}
	
	public void play() {
		//player들의 play결과를 저장한 int[]타입 배열
		int[]times= new int[players.length];
		
		//배열에 결과값들 저장
		for(int i=0;i<players.length;i++) {
			times[i]=players[i].play();
			
		}
		//times배열에서 10과 가장 가까운 값
		//(times[i]-10 )의 절대값을 구한 뒤 그중 가장 작은 값 (최솟값)을 구한다.
		//절대값 : Math.abs(n) -->n의 절댓값 
		
		int min=Math.abs(times[0]-10);
		int winnerNo=0;
		for (int i=1;i<times.length;i++) {
			Math.abs(times[i]-10);
			if(Math.abs(times[i]-10)<min) {
				min=Math.abs(times[i]-10);
				winnerNo=i;
			}else {
				
			}
		}
		
		
		
		
	}
	
	
	
	
	
}
