package ex01_random;

import java.util.Arrays;
import java.util.Scanner;

public class Quiz06 {

	public static void main(String[] args) {
		//1000원에 번호 6개 한세트
		//돈 입력 :
		//5천원 -> 5행 6열 출력
		//한 행에 동일한 번호가 나오면 안됨!!!!!!!!!! =>인덱스 번호로 '오름차순' 정렬하기
		
		Scanner sc=new Scanner(System.in);
		System.out.println("돈 입력 :");
		
		int money=sc.nextInt();
		//몇번할지 == 행의 갯수
		int set=money/1000;
		//로또 결과 배열
		int lotto[][]=new int[set][6];
		
		while(true){
			
			for(int i=0;i<set;i++) {
				
				//1~45 순서대로 준비
				int ballCount=45;
				int[] balls=new int [ballCount];
				
				for(int j=0;j<balls.length;j++) {
					balls[j]=j+1;
					
				}
				//ball배열 ->lotto배열로 옮김
				//1. balls배열의 인덱스를 랜덤생성
				//2. 해당 인덱스의 값을 로또로 옮김
				//3. balls 배열의 마지막 요소를 랜덤 생성된 인덱스로 보냅니다.
				for(int j=0;j<lotto[i].length;j++) {
					int index=(int)(Math.random()*ballCount)+0;
					lotto[i][j]=balls[index];
					int lastIndex=(ballCount-1)-j;
					if(index!=lastIndex) {
						balls[index]=balls[lastIndex];
					}
					ballCount--;
				}
				//세트별로 정렬(오름차순) 출력하기
				for(int[] line:lotto) {
					Arrays.sort(line);//한줄만 빼서 오름차순 정렬
				}
				System.out.println();
			
			
			
			
		//for문 닫음 i		
			}
		
		
		
		}

	}
}
	
