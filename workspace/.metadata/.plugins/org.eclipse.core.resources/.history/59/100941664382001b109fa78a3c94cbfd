package Quiz04;

public class Book {
	//b3.set("홍길동전","5000");
	//b3.info();//제목 :어린왕자, 저자:미상,기격 5000 원

	String book;
	String writer;
	int price;
	
	void set(String a,String b,int c) {
		book=a;
		writer=b;
		price=c;
	}
	
	//이름이 같은 함수를 또 호출 - > 오버로딩 이용
	void set(String a,String b) {
		set(a,b,0);
	}
	void set(String a,int c) {
		set(a,"미상",c);
	}
	
	
	
	void info() {
		
		System.out.println("제목 :"+book +",  저자 :"+writer+",   가격 : "+price+"원");
	}
	
}
