		while(true) {
			Scanner sc=new Scanner(System.in);
			System.out.print("정수,실수  값 입력 :");
			String a=sc.next();
			
			if(a.indexOf(".")==-1) {
				System.out.println("정수\n");
			}else {
				System.out.println("실수\n");
			}
			
		}
		
		
	}

}
