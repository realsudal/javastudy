package ex02_String;

public class Ex01_String {

	public static void main(String[] args) {
		
		/*
		 * 1. 동일한 문자열 리터럴은 자바에 의해사 최적화 되기 때문에
		 * "apple"이 하나만 생깁니다.
		 */
		String a="apple";
		String b="apple";
		System.out.println(a==b);//주소 같은지 검증
		
		/*
		 * 2. new는 무조건 새로 만든다.
		 * 바나나는 2개  
		 * 
		 */
		String c=new String("banana");
		String d=new String("banana");
		System.out.println(c!=d); //주소가 다름
		
		
		/*
		 * 3.  length() : '문자열'의 '길이' 구하는 메소드
		 */
		System.out.println(a.length());
		
		
		
		
		/*
		 * 4.substring() : '문자열'의 '일부를 추출' 메서드
		 * 		ㄴ 방법1 : substring(시작인덱스) : '시작인덱스 ~ 끝'까지 추출
		 * 		ㄴ 방법2 : substring(시작인덱스,종료인덱스) : '시작 ~ 종료-1' 까지 추출!!!!!!
		 */
		
		System.out.println(a.substring(0,3));
		
		
		
		/*
		 * 5. trim() : 문자열의 맨앞과 뒤의 공백 제거하는 메소드 
		 */
		String name="       alice    ";
		
		System.out.println(name.trim());
		System.out.println(name.trim().length());
		
		/*
		 * 6. indexOf() : 찾고자하는 문자열의 인덱스를 반환
		 */
		
		String str="best of best of best";
		
		System.out.println("첫번째 best의 인덱스 : "+ str.indexOf("best"));//맨 처음 찾는값만 반환됨 
		System.out.println("두번째 best의 인덱스 : "+ str.indexOf("best",4)); //인덱스 4부터  best검색하기
		System.out.println("두번째 best의 인덱스 : "+ str.indexOf("best",str.indexOf("best")+1));
		System.out.println("찾는 문자열이 없는 경우 : "+ str.indexOf("v"));
		
		
		
	}

}
