package quiz09;

public class Soldier {

	private String name;
	private Gun[] gun;
	private int index;

	
	Soldier(String name,int gunNo){
		this.name=name;
		this.gun=new Gun[gunNo];		
	}
	//메소드 - 무슨 총에 몇발 장전 
	void addGun(Gun gun) {
		if (index<this.gun.length)
			this.gun[index++]=gun;
		else
			System.out.println("더이상 총 추가 불가합니다.");
		
	}
	
	void shoot() {
		for(int i=0;i<this.gun.length;i++)
			gun[i].shoot();
	}
	void shoot(int bullCount) {
		switch (bullCount) {
		case 1:
			
			break;
		case 2:
			
			break;
		default:
			System.out.println("그런 총 없음");
			break;
		}
		
	}
	
	
}
