		int money=sc.nextInt();
		//몇번할지 == 행의 갯수
		int set=money/1000;
		//로또 결과 배열
		int lotto[][]=new int[set][6];
		
		do {
			
			for(int i=0;i<set;i++) {
				
				//1~45 순서대로 준비
				int ballCount=45;
				int[] balls=new int [ballCount];
				
				for(int j=0;j<balls.length;j++) {
					balls[j]=j+1;
					
//					
//					int index=(int)((Math.random()*44)+1);
//					
//					
