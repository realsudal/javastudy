package quiz08;

public class Singer {
	private String name;
	private Song[] songs;
	private int index;
	
	//songCount는 최대 노래개수 , index는 현재 가지고있는 노래개수 ! 다르다!
	public Singer(String name,int songCount) {
		
		this.name=name;
		songs=new Song[songCount];
	}
	
	//노래 추가하기 메서드
	public void addSong(Song song) {
		songs[index++]=song;
		
	}
	
	//info 메서드
	public void info() {
		//가수명, 노래 목록
		System.out.print("가수명은 "+name +", 노래 목록은");
		for (int i=0;i<index;i++) {
			System.out.print(songs[i]);
		}
	}
	
	
	
	
	
}
