		String []arr= {"가위","바위","보"};
		
		int win=0;
		int same=0;
		
		//loop 자주쓰면 안좋음 ㅎ
		loop:
		while(true) {
			System.out.println("가위,바위,보 입력 : ");
			int player=0;
			switch (sc.next()) {
			case "바위":
				player=1;
				break;

			case "보":
				player=2;
				break;
			}
			
			
			
			System.out.print("player는 "+arr[player]+", ");
			
			int index=(int)(Math.random()*3)+0;
			System.out.println("컴터는 "+arr[index]);
			
			switch (player-index) {
			case -2:
			case 1:
				System.out.println("이김");
				win++;
				break;
			case 0:
				System.out.println("비김");
				same++;
				break;

			default:
				System.out.println("졌습니다./n"+win+"승"+same+"패");
				break loop;
			}
		
		}
		
		
		
	}

}
