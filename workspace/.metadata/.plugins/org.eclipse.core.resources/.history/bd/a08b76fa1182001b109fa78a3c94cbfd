package ex01_user_type;

public class MainClass {

	public static void main(String[] args) {
		
		
		//클래스 person을 타입으로 하는 "객체"를 생성
		//타입 person, 객체 p1
		Person p=new Person();
		
		//클래스에 포함된 멤버(필드,메소드)는 마침표(.)를 이용해서 호출
		//각 필드의 초기화된 상태 출력
		System.out.println(p.name);
		System.out.println(p.age);
		System.out.println(p.h);
		System.out.println(p.gender);
		System.out.println(p.isKorean);
		
		
		
		//person은 reference타입 (데이터 변형에 좋은 타입 ex-DB)
		System.out.println(p);//p객체의 '클래스이름@메모리 참조위치' 출력
		
		//p2는 객체 p의 주소값(참조값)을 저장함  =>따라서 동일한 값이 저장됨
		Person p2=p;
		System.out.println(p2);
		
		
		//따라서 p2참조된 주소값의 원형이 바뀌면 같이 참조하고 있던 p의 값도 바뀜
		p2.name="mimi";
		System.out.println(p.name);
		
		
		
		
		
		Person women=new Person();
		//객체를 하나 더 생성하면 참조주소가 달라짐!
		System.out.println(women);
		
		
	}

}
