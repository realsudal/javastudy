package quiz10;

public class Lectuer {
	private String lecture;
	private Student[] students;
	
	Lectuer(String lecture,String names[]){
		this.lecture=lecture;
		students =new Student[names.length];//배열생성 먼저 해줘야지!!!!! 이거 빼먹지마
		for(int i=0;i<names.length;i++)
			//this.student[i]=names[i];
			students[i]=new Student(names[i]);//위에처럼 넣는거 아니야...ㅠ
	}
	
	void exam(int subject) {
		for(Student student:students)
			student.setScores(subject);
		
	}
	
	public double getLectureAverage() {
		double total=0.00;
		for(Student student:students) {
			total+=student.getAverage();
		}
		return total/students.length;
	}
	void info() {
		System.out.println(student.info());
		
	}
	
}
