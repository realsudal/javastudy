package quiz09;

public class Soldier {

	private String name;
	private Gun[] gun;
	private int index;

	
	Soldier(String name,int gunNo){
		this.name=name;
		this.gun=new Gun[gunNo];		
	}
	//메소드 - 무슨 총에 몇발 장전 
	void addGun(Gun gun) {
		if (index<this.gun.length)
			this.gun[index++]=gun;
		else
			System.out.println("더이상 총 추가 불가합니다.");
		
	}
	
	//메서드 - 총쏘기
	void shoot() {
		for(int i=0;i<this.gun.length;i++) {
			gun[i].shoot();
	}
	void shoot(int bullCount) {
		switch (bullCount) {
		case 1:
			gun[0].shoot();
			break;
		case 2:
			gun[1].shoot();
			break;
		case 3:
			gun[2].shoot();
			break;
		}
		
	}
	void shoot(String g) {
		switch (g) {
		case "베레타":
			gun[0].shoot();
			break;
		case " " :
			gun[1].shoot();
			break;
		case "스위스":
			gun[2].shoot();
			break;
		}
		
	}
	
	//메서드 - 모든 총에 1발씩 추가
	void reload() {
		for(int i=0;i<this.gun.length;i++) {
			gun[i].reload(1);
		}
	}
	//메서드 - 정보 출력
	void info() {
		
	}
	
}
